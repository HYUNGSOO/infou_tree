<div class="wrapper">

  <header class="main-header">
    <!-- Logo -->
    <a href="index2.html" class="logo">
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>Info</b>U</span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>인포</b>유</span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top" role="navigation">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "navbar-form navbar-right form-inline" }) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, :placeholder => "Email", class: "form-control" %> 
            </div>
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", class: "form-control"  %>
            </div>
            <%= f.submit 'Login', class: "action btn btn-default" %>
            <div class="btn btn-default">
              <%= link_to "Sign_up", new_user_registration_path %>
            </div>
            
          <% end %>
          

          
          
          

                    
          
        </ul>
      </div>
    </nav>
  </header>
  
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper-first">
    <!-- Main content -->
    <section class="content" >
      

    </section><!-- /.content -->
    
  </div><!-- /.content-wrapper -->
    
</div>  
  

